{
  "name": "rsschool-react-app",
  "private": true,
  "version": "0.0.0",
  "engines": {
    "node": "^20",
    "npm": "^10"
  },
  "type": "module",
  "scripts": {
    "dev": "vite",
    "start": "vite",
    "build": "tsc -b && vite build",
    "preview": "npm run build && vite preview",
    "prepare": "husky",
    "prettier:fix": "prettier --write --ignore-unknown src/",
    "lint:fix": "eslint src/ --fix",
    "format:fix": "npm run lint:fix && npm run prettier:fix",
    "lint": "eslint . --ext ts,tsx --ignore-pattern '*.test.tsx' --ignore-pattern 'setupVitest.ts' --ignore-pattern 'mock-fetch-result.ts' --report-unused-disable-directives --max-warnings 0",
    "prettier": "prettier --check --ignore-unknown src/",
    "types-check": "tsc --noEmit",
    "validate:all": "npm run lint && npm run prettier && npm run types-check",
    "test": "vitest run --coverage --coverage.exclude='.eslintrc.cjs' --coverage.exclude='./src/mocks' --coverage.exclude='./src/main.tsx'"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^2.2.6",
    "@testing-library/react": "^16.0.0",
    "modern-normalize": "^2.0.0",
    "react": "^18.3.1",
    "react-csv": "^2.2.2",
    "react-dom": "^18.3.1",
    "react-redux": "^9.1.2",
    "react-router-dom": "^6.24.1",
    "vite-plugin-svgr": "^4.2.0"
  },
  "devDependencies": {
    "@types/node": "^20.12.8",
    "@types/react": "^18.3.3",
    "@types/react-csv": "^1.1.10",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^7.13.1",
    "@typescript-eslint/parser": "^7.13.1",
    "@vitejs/plugin-react": "^4.3.1",
    "@vitest/coverage-istanbul": "^2.0.2",
    "eslint": "^8.57.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-compiler": "^0.0.0-experimental-0998c1e-20240625",
    "eslint-plugin-react-hooks": "^4.3.0",
    "eslint-plugin-react-refresh": "^0.4.6",
    "eslint-plugin-unused-imports": "^3.2.0",
    "husky": "^9.0.11",
    "jsdom": "^24.1.0",
    "prettier": "^3.2.5",
    "sass": "^1.76.0",
    "typescript": "^5.2.2",
    "vite": "^5.3.1",
    "vitest": "^2.0.2",
    "vitest-fetch-mock": "^0.3.0"
  }
}
