{
  "name": "rsschool-react-app",
  "private": true,
  "version": "0.0.0",
  "engines": {
    "node": "^20",
    "npm": "^10"
  },
  "type": "module",
  "scripts": {
    "dev": "vite",
    "start": "vite",
    "build": "tsc -b && vite build",
    "preview": "npm run build && vite preview",
    "prepare": "husky",
    "prettier:fix": "prettier --write --ignore-unknown src/",
    "lint:fix": "eslint src/ --fix",
    "format:fix": "npm run lint:fix && npm run prettier:fix",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "prettier": "prettier --check --ignore-unknown src/",
    "types-check": "tsc --noEmit",
    "validate:all": "npm run lint && npm run prettier && npm run types-check"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@types/node": "^20.12.8",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^7.13.1",
    "@typescript-eslint/parser": "^7.13.1",
    "@vitejs/plugin-react": "^4.3.1",
    "eslint": "^8.57.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^4.3.0",
    "eslint-plugin-react-refresh": "^0.4.6",
    "eslint-plugin-unused-imports": "^3.2.0",
    "husky": "^9.0.11",
    "prettier": "3.2.5",
    "sass": "^1.76.0",
    "typescript": "^5.2.2",
    "vite": "^5.3.1"
  }
}
